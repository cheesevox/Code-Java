<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="LoginAction" class="cheeesevox.action.LoginAction">
            <result name="admin">admin.jsp</result>
            <result name="user">user.jsp</result>
            <result name="error">error.jsp</result>
            <result name="input">login.jsp</result>
        </action>
        <action name ="SearchAction" class="cheeesevox.action.SearchAction">
            <result name="success">admin.jsp</result>
        </action>
        <action name="RegisterAction" class="cheeesevox.action.RegisterAction">
            <exception-mapping exception="java.sql.SQLException" result="input"/>
            <result name="error">error.jsp</result>
            <result name="error">error.jsp</result>
            <result name="error">error.jsp</result>
        </action>
    </package>
</struts>
